{
  "name": "npmbadge.com",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "build/index.js",
  "scripts": {
    "start": "concurrently \"npm:start:server\" \"npm:start:site\"",
    "start:server": "ts-node-dev src/index.ts",
    "start:site": "npm run build:site -- --watch",
    "build": "concurrently \"npm:build:server\" \"npm:build:site\"",
    "build:server": "tsc",
    "build:site": "eleventy --input=site",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "format": "npm run lint -- --fix"
  },
  "author": "Luca Scalzotto (https://github.com/LucaScorpion)",
  "license": "MIT",
  "dependencies": {
    "canvas": "^2.11.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.11",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.4",
    "sass": "^1.58.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
